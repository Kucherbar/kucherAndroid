<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MenuActivity">

    <Button
            android:text="Go to add matches"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/add"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="340dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="Go to wacth matches"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/watch"
            app:layout_constraintTop_toBottomOf="@+id/add" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>